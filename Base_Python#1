while True # c'est ne pas arreter la boucle tant que 1 == 1

while confirmation != "START" or confirmation != "STOP":
    if confirmation == "START":
        print("C'est parti!")
        break

    elif confirmation == "STOP":
        print("Fermeture du jeu...")
        exit()
    
    else: 
        print("Écriver START ou STOP")
        confirmation = input("Écriver START pour démarrer> ")

# il boucle avec la condition tant que confirmation est differente de start

